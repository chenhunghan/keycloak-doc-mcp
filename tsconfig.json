{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "esModuleInterop": true,
    "module": "nodenext",
    "skipLibCheck": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}
